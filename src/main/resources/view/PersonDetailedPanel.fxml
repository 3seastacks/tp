<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:id="personDetailedPanel">

    <Label fx:id="name" style="-fx-font-size: 40;" wrapText="true"/>
    <ImageView fx:id="pin" fitHeight="30.0" fitWidth="30.0" />

    <HBox>
        <ImageView fx:id="phoneIcon" fitHeight="20.0" fitWidth="20.0"/>
        <Label fx:id="phone" translateX="13.0"/>
    </HBox>

    <HBox style="-fx-padding: 5 0 5 0;">
        <ImageView fx:id="emailIcon" fitHeight="20.0" fitWidth="20.0"/>
        <Label fx:id="email" translateX="13.0"/>
    </HBox>

    <Label text="Emergency Contact" style="-fx-font-size: 30.0;"/>
    <Separator />
    <Label fx:id="emergencyName"/>
    <Label fx:id="emergencyPhone"/>
</VBox>
